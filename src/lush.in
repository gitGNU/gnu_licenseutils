program="@PROGRAM@"
tmpfile=`mktemp /tmp/$program.XXXXXX`
run=`which $program 2>/dev/null`
if [[ ! -x "$run" ]]; then
        echo "$0: $program not found in path"
        exit 1
fi
if [[ $# -eq 0 ]]; then
  $run welcome
fi
if [ ! -f ~/.lushrc ]; then
  $run --generate-bashrc > ~/.lushrc
fi
export BASH_ENV=~/.lushrc
/bin/bash --init-file ~/.lushrc $*
