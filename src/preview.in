if [[ "$BASH_ENV" == *\.lushrc* ]]; then
  progname=$(basename $0)
else
  progname="licensing $(basename $0)"
fi
showusage() {
  cat <<EOF
Usage: ${progname} [-?] [--no-commenting-style] [--help] [--usage]
EOF
}

showhelp() {
  cat <<EOF
Usage: ${progname} [OPTION...]
Show the current working boilerplate.

      --no-commenting-style  show the boilerplate without comment delimiters
  -?, --help                 give this help list
      --usage                give a short usage message
EOF
}
nostyle=
for option
do
  case $option in
  --help)
    showhelp
    exit;;
  --usage)
    showusage
    exit;;
  --no-commenting-style)
    nostyle=1
    shift;;
  --*)
    echo >&2 "${progname}: $option: unknown option"
    exit 1;;
  esac
done

if [[ $# -ge 1 ]]; then
  echo "${progname}: Too many arguments"
  echo "Try '${progname} --help' or '${progname}--usage' for more information."
  exit 1
fi

if [[ ! -f ~/.@PACKAGE@/license-notice ]]; then
  echo "${progname}: Can't preview because a license has not been selected"
  echo "Try 'choose --help' for more information."
  exit 1
fi

if [[ ! -f ~/.@PACKAGE@/copyright-holders ]]; then
  echo "${progname}: Can't preview because copyright holders not been specified"
  echo "Try 'copyright --help' for more information."
  exit 1
fi


preview=`mktemp`
tmpfile=`mktemp`
echo "" > $tmpfile
if [ -f ~/.@PACKAGE@/top-line ]; then
  cat ~/.@PACKAGE@/top-line $tmpfile 2>/dev/null > $preview
fi

cat ~/.@PACKAGE@/copyright-holders $tmpfile 2> /dev/null >> $preview

if [ -f ~/.@PACKAGE@/project-line ]; then
  cat ~/.@PACKAGE@/project-line | fmt >> $preview
  cat $tmpfile >> $preview
fi

if [ -f ~/.@PACKAGE@/extra-line ]; then
  cat ~/.@PACKAGE@/extra-line | fmt  >> $preview
  cat $tmpfile >> $preview
fi

if [ -f ~/.@PACKAGE@/selected-comment-style ]; then
  style=`eval cat ~/.@PACKAGE@/selected-comment-style`
else
  style=""
fi
if [ "x$nostyle" == "x1" ]; then
  style=""
fi

if [ "x$style" != "x" ]; then
  cat ~/.@PACKAGE@/license-notice | sed -e 's/^[ ]*//g' >> $preview
  @PROGRAM@ comment --style=$style $preview 
else
  cat ~/.@PACKAGE@/license-notice >> $preview
  cat $tmpfile >> $preview
  cat $preview
fi
rm $preview
rm $tmpfile
