showusage() {
  cat <<EOF
Usage: $(basename $0) [-?] [--help] [--usage]
EOF
}

showhelp() {
  cat <<EOF
Usage: $(basename $0) [OPTION...]
Clear the current working boilerplate.

      --quiet                don't show diagnostic messages
  -?, --help                 give this help list
      --usage                give a short usage message

EOF
}

quiet=0
for option
do
  case $option in
  --quiet)
    quiet=1
    ;;
  --help)
    showhelp
    exit;;
  --usage)
    showusage
    exit;;
  *)
    echo >&2 "$(basename $0): $option: unknown option"
    exit 1;;
  esac
done

rm -f ~/.@PACKAGE@/selected-comment-style 2> /dev/null && \
rm -f ~/.@PACKAGE@/top-line  2> /dev/null && \
rm -f ~/.@PACKAGE@/copyright-holders 2> /dev/null && \
rm -f ~/.@PACKAGE@/project-line  2> /dev/null && \
rm -f ~/.@PACKAGE@/extra-line  2> /dev/null && \
rm -f ~/.@PACKAGE@/selected-licenses 2>/dev/null && \
rm -f ~/.@PACKAGE@/license-notice 2>/dev/null
retval="$?"

if [ "$quiet" == "0" ]; then
  echo "Removed." >&2
fi

exit $retval
